{% extends 'base.html.twig' %}

{% block links %}
	<style>
		.backdrop-blur {
			backdrop-filter: blur(25px);
		}
		@media screen(min-width: 768px) {
			.offset-md-3 {
				margin-left: 25%;
			}
		}
	</style>
{% endblock %}

{% block body %}
	{% form_theme registrationForm 'bootstrap_5_layout.html.twig' %}
	{# <div style="background-image: url(https://th.bing.com/th/id/R.b532dc12eab61b24ffee0e66817ac7f1?rik=eblBhXJATREhZw&pid=ImgRaw&r=0);"> #}
	<div style="background-image: url();">
		<div class="backdrop-blur">
			<main class="container">
				<div class="py-5 pb-md-3 text-center">
					<i class="mb-4 bi bi-calendar3 display-5 text-primary mx-auto"></i>
					<h2>{{ 'Signing Up'|trans }}</h2>
					<p class="lead">{{ 'Create your account and start using your agenda'|trans }}.</p>
				</div>
				<div class="col-md-6 offset-md-3">
					{{ form_start(registrationForm, {'attr': {'novalidate': 'novalidate'}}) }}
					<div class="row gx-5">
						<div class="col">
							{{ form_row(registrationForm.fisrtName) }}
						</div>
						<div class="col">
							{{ form_row(registrationForm.lastName) }}
						</div>
					</div>

					{{ form_row(registrationForm.email) }}
					{{ form_row(registrationForm.plainPassword) }}

					<div class="d-flex mb-3 mb-md-2">
						<legend class="col-form-label">{{ 'Gender'|trans }}</legend>
						{% for choice in registrationForm.gender.vars.choices %}
							<div class="ms-auto form-check form-check-inline">
								<label class="form-check-label" for="registration_form_gender_{{ loop.index0 }}">{{ choice.label|trans }}</label>
								<input class="form-check-input" type="radio" id="registration_form_gender_{{ loop.index0 }}" name="registration_form[gender]" value="{{ choice.value }}"/>
							</div>
						{% endfor %}
						{% do registrationForm.gender.setRendered() %}
					</div>

					{# {{ form_row(registrationForm.gender) }} #}

					<div class="py-3 pt-md-1 pb-md-2 text-center">
						{{ form_row(registrationForm.register) }}
					</div>

					{{ form_end(registrationForm) }}
				</div>
				<div class="small text-center">
					{{ 'Already have an account ?'|trans }}
					<a href="{{ path('app_login') }}" class="text-decoration-none link-info">{{ 'Login'|trans }}</a>
				</div>
			</main>


			<footer class="py-3 text-muted text-center text-small">
				<p class="mb-1">
					&copy; 2022
					<i class="bi bi-dot fw-bold"></i>
					Agenda by Asmitta-01
				</p>
			</footer>
		</div>

	</div>
{% endblock %}
